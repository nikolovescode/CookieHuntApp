<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookieHuntApp.Pages.RegisterEmployee">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <StackLayout Grid.Row="1" Margin="40,40,40,0">
                <Entry Placeholder="Email" PlaceholderColor="#707070" x:Name="EntEmail"/>
                <Button Text="Register Employee" BackgroundColor="SandyBrown" TextColor="White" x:Name="BtnRegisterEmployee" Clicked="BtnRegisterEmployee_Clicked" />
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>