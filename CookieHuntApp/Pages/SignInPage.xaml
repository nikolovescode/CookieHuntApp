<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookieHuntApp.Pages.SignInPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <StackLayout x:Name="Logo" VerticalOptions="FillAndExpand" >
                <Image x:Name="LogoIcon" Source="logo.png" Margin="0,80,0,0"/>
            </StackLayout>

            <StackLayout Grid.Row="1" Margin="40,40,40,0">
                <Entry Placeholder="Email" PlaceholderColor="#707070" x:Name="EntEmail"/>
                <Entry Placeholder="Password" PlaceholderColor="#707070" x:Name="EntPassword" IsPassword="true"/>
                <Button Text="Login as Admin" BackgroundColor="SandyBrown" TextColor="White" x:Name="BtnLoginAdmin" Clicked="BtnLoginAdmin_OnClicked" />
                <Button Text="Login as Employee" BackgroundColor="SandyBrown" TextColor="White" x:Name="BtnLoginEmployee" Clicked="BtnLoginEmployee_Clicked" />
                <Button Text="Login as Customer" BackgroundColor="SandyBrown" TextColor="White" x:Name="BtnLoginCustomer" Clicked="BtnLoginCustomer_Clicked" />
            </StackLayout>
            <StackLayout Grid.Row="2" Padding="20" Orientation="Horizontal" HorizontalOptions="Center" >
                <Label Text="Har du inget konto?" />
                <StackLayout Spacing="0">
                    <Label Text="Skaffa konto" FontAttributes="Bold" />
                    <BoxView BackgroundColor="Black" HeightRequest="1"/>
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer x:Name="TapSignUp" NumberOfTapsRequired="1" Tapped="TapSignUp_OnTapped">

                        </TapGestureRecognizer>
                    </StackLayout.GestureRecognizers>
                </StackLayout>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>