<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CookieHuntApp.Pages.SignPurchase">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackLayout x:Name="Logo" VerticalOptions="FillAndExpand" >
            <Image x:Name="LogoIcon" Source="logo.png" Margin="0,80,0,0"/>
        </StackLayout>
        <StackLayout Grid.Row="1" Margin="40,20,40,0">
            <Entry Placeholder="Email" x:Name="EntEmail"/>
            <Entry Placeholder="Password" x:Name="EntPassword" IsPassword="True"/>
            <Button Text="SIGN PURCHASE" BackgroundColor="SandyBrown" TextColor="White" x:Name="BtnSignPurchase" Clicked="BtnSignPurchase_Clicked"/>
        </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>